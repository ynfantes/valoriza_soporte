{% extends "layout/tema.html.twig"%}
{% block contenido %}
<!-- start :: help center -->
<section class="py-4 mb-5">
<div class="container">
<div class="row">
<div class="col-12 col-lg-8 mb-5">
    <article class="p-4 shadow-xs bg-white rounded" id="middle">
        <header class="d-flex b-0">
            <h2 class="h5 text-truncate w-100">
            {{articulo.titulo}}
            </h2>
        </header>
        <div class="border-bottom pb-2 mb-3"></div>
        <div class="container fs--14">
        {{articulo.contenido|raw}}
        </div>
    </article>
</div>
<div class="col-12 col-lg-4 mb-5 side-container">
<div class="p-4 shadow-xs bg-white rounded">
<div class="border-bottom pb-4 mb-4 text-center">
<a href="#!" class="d-inline-block mx-2" 
   id="imprimir" 
   aria-label="Guardar este artículo en PDF" 
   title="" data-toggle="tooltip" 
   data-original-title="Guardar este artículo en PDF">
<img class="img-fluid w--50" src="{{constant('ROOT')}}demo.files/svg/icons/files/pdf.svg" alt="...">
</a>
<!--a href="#!" class="d-inline-block mx-2" 
   aria-label="Envíar el link vía email" 
   title="" data-toggle="tooltip" 
   data-original-title="Envíar el link vía email">
<img class="img-fluid w--50" src="{#{constant('ROOT')}#}demo.files/svg/icons/email2.svg" alt="...">
</a-->
<a href="#!" class="d-inline-block mx-2 btn-clipboard" 
   id="clipboard"
   aria-label="Copiar al portapapeles" 
   title="" data-toggle="tooltip" 
   data-original-title="Copiar al portapeles">
<img class="img-fluid w--50" src="{{constant('ROOT')}}demo.files/svg/icons/contractapprove.svg" alt="...">
</a>
<p class="m-0 text-muted fs--13 mt-3">
Acciones para el artículo actual
</p>
{% if listado %}
</div>
<h3 class="fs--18 mb-3">
    Artículos <span class="text-primary">relacionados</span>
</h3>
<ul class="list-unstyled">
{%for articulo in listado%}
<li class="list-item">
<!--i class="fi fi-check text-success"></i-->
<a 
    class="text-dark font-weight-light d-inline-block py-2" 
    href="{{constant('ROOT')}}?{%if articulo.id_tema %}topic={{articulo.id_tema}}&{%endif%}item={{articulo.id}}"> {{articulo.titulo}}
</a>
</li>
{%endfor%}
</ul>
{% endif %}
</div>
</div>
</div>
</div>
</section>
<!-- end :: help center -->
{% endblock %}